{
	"$schema" : "http://json-schema.org/draft-03/schema#",
	"id" : "http://json-schema.org/draft-03/schema#",
	"description" : "Geographic Location",
	"type" : "object",
	"properties" : {
		"lat" : { 
			"description" : "Latitude", 
			"type" : "number", 
			"required" : true ,
			"minimum" : -90.00,
			"maximum" : 90.00
		},
		"lon" : { 
			"description" : "Longitude", 
			"type" : "number", 
			"required" : true ,
			"minimum" : -180.00,
			"maximum" : 180.00
		}
	},
	"additionalProperties" : false
}
